<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HoverTheme">
        <item name="colorControlActivated">@color/colorHover</item>
        <item name="colorControlHighlight">@color/colorHover</item>
    </style>

    <style name="HoverEffect" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:theme">@style/HoverTheme</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
